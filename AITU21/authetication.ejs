            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@5.15.4/css/fontawesome.min.css"
            integrity="sha384-jLKHWM3JRmfMU0A5x5AkjWkw/EYfGUAGagvnfryNV3F9VqM98XiIH7VBGVoxVSc7"
            crossorigin="anonymous"
    />
    <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
</head>
<body>
<form id="loginDetail" action="/login" method="post" >
    <h1>Login in for PRO</h1>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id="inputEmail3" placeholder="Email" name="email">
        </div>

        <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="inputPassword3" placeholder="Password" >
        </div>
    </div>
    <div class="form-grouprow">
        <div class="col-sm-1">Confirm</div>
        <div class="col-sm-10">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="gridCheck1">
                <label class="form-check-label" for="gridCheck1">
                    <h4 style="color:black">You confirm that you have read, fully agree and accept the terms of the</h4>
                    <h4 style="color:black">"Agreement on the provision of Employment Assistance services (offer)"</h4>
                </label>
            </div>
        </div>
    </div>
    <br>
    <div class="form-group">
        <div class="col-sm-10">
            <button type="submit">Sign in</button>
        </div>
    </div>
</form>

</body>
</html>